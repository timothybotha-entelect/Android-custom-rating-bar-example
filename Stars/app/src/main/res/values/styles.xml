<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_star</item>
        <item name="android:minHeight">15dp</item>
    </style>

    <style name="Custom_rating_bar_extended" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_star_extended</item>
        <item name="android:indeterminateDrawable">@drawable/custom_star_extended</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">45dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:thumb">@null</item>
    </style>

</resources>